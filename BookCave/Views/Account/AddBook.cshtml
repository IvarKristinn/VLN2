@model BookCave.Models.InputModels.BookInputModel

<form action="" method="POST">
    <fieldset>
        <legend>Insert a book</legend>

        <label asp-for="Title">Title</label><br>
        <input type="text" asp-for="Title" placeholder="Title">
        <span asp-validation-for="Title"></span> <br>

        <label asp-for="Author">Author</label><br>
        <input type="text" asp-for="Author" placeholder="Author">
        <span asp-validation-for="Author"></span><br>

        <label for="Description">Description</label><br>
        <textarea name="Description" id="Description" cols="70" rows="10" placeholder="Write a description" maxlength="360"></textarea>
        <span asp-validation-for="Description"></span> <br>
        
        <!--- þarf að bootstrappa þetta -->
        <label asp-for="Genre">Genre</label><br>
        <select asp-for="Genre">
            <option value="" disabled selected>Select a genre</option>
            <option value="Dark Fantasy">Dark Fantasy</option>
            <option value="Epic Fantasy">Epic Fantasy</option>
            <option value="Heroic Fantasy">Heroic Fantasy</option>
            <option value="High Fantasy">High Fantasy</option>
            <option value="Urban Fantasy">Urban Fantasy</option>
        </select>
        <span asp-validation-for="Genre"></span><br>

        <label asp-for="Price">Price</label><br>
        <input type="text" asp-for="Price" placeholder="Price">
        <span asp-validation-for="Price"></span><br>

        <label asp-for="ImageLink">ImageLink</label><br>
        <input type="text" asp-for="ImageLink" placeholder="ImageLink">
        <span asp-validation-for="ImageLink"></span> <br>

        <a asp-controller="Account" asp-action="Staff" class="btn btn-danger">Prev</a>

        <input type="submit" class="btn btn-danger" value="Add book to database">
    </fieldset>
</form>