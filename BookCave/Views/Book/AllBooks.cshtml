@model List<BookCave.Models.ViewModels.BookThumbnailViewModel>
<h1>List of all books!</h1>
@foreach(var book in @Model)
    {
        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
            <div class="container">
                <img src="@book.ImageLink" class="img-thumbnail" alt="book-thumbnail">
                <p>@book.Title </p>
                <p>@book.Author</p>
                <p>@book.Price</p>
                <p>@book.UserRatingAvg</p>
            </div>
        </a>
    }