@model BookCave.Models.ViewModels.BillingAndShippingViewModel

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container" id="order-confim-size">
    <h1>Thank you for your order!</h1>
    <h2>Your order is on its way to the following address:</h2>

    <h1>Shipping Address</h1>
    <p>
        Streetname: @Model.ShippingAddress.Street<br>
        House number: @Model.ShippingAddress.HouseNum
    </p>

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to front page</a>
</div>